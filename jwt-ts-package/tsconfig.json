{
  "compilerOptions": {
    "target": "ES6",                          // Target ECMAScript version
    "module": "CommonJS",                     // Module system
    "outDir": "./dist",                       // Output directory for compiled files
    "rootDir": "./src",                       // Root directory of source files
    "strict": true,                           // Enable strict type checking options
    "esModuleInterop": true,                  // Enable compatibility with CommonJS modules
    "skipLibCheck": true,                     // Skip type checking of declaration files
    "declaration": true,                      // Generate .d.ts declaration files
    "declarationMap": false,                   // Generate .d.ts.map files for debugging
    "sourceMap": false                         // Generate source maps
  },
  "include": ["src"],                         // Include files in the src directory
  "exclude": ["node_modules"]                 // Exclude node_modules from compilation
}